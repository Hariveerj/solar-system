pipeline {
    agent { label 'app-server-agent' }

    environment {
        // Nexus
        NEXUS_URL   = 'http://13.234.202.23:8081'
        NEXUS_REPO  = 'maven-snapshots'
        NEXUS_CREDS = 'nexus-creds'

        GROUP_ID    = 'com/example'
        ARTIFACT_ID = 'solar-system'
        VERSION     = '1.0-SNAPSHOT'

        // Docker
        IMAGE_NAME = 'hariveer/solar-system'
        IMAGE_TAG  = "${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Download JAR from Nexus (SNAPSHOT SAFE)') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: NEXUS_CREDS,
                    usernameVariable: 'NEXUS_USER',
                    passwordVariable: 'NEXUS_PASS'
                )]) {
                    sh '''
                    mkdir -p target

                    curl -sf -u $NEXUS_USER:$NEXUS_PASS \
                      -o target/app.jar \
                      $NEXUS_URL/repository/$NEXUS_REPO/$GROUP_ID/$ARTIFACT_ID/$VERSION/$ARTIFACT_ID-$VERSION.jar

                    ls -lh target/app.jar
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG .'
            }
        }

        stage('Run App on 8080 (DO NOT REMOVE)') {
            steps {
                sh '''
                docker run -d \
                  -p 8080:8080 \
                  --name solar-test-$BUILD_NUMBER \
                  $IMAGE_NAME:$IMAGE_TAG

                sleep 20

                curl -f http://localhost:8080/planet/health
                '''
            }
        }

        stage('Approval') {
            steps {
                input message: 'App running on 8080. Proceed to Kubernetes?',
                      ok: 'APPROVE'
            }
        }
    }

    post {
        success {
            echo '✅ Phase-2 SUCCESS'
        }
        aborted {
            echo '⏸️ Approval rejected – container still running'
        }
        failure {
            echo '❌ Phase-2 FAILED'
        }
    }
}