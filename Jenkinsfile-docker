pipeline {
    agent { label 'app-server-agent' }

    environment {
        // ===== Nexus =====
        NEXUS_URL   = 'http://13.234.202.23:8081'
        NEXUS_REPO  = 'maven-snapshots'
        NEXUS_CREDS = 'nexus-creds'

        GROUP_ID    = 'com/example'
        ARTIFACT_ID = 'solar-system'
        VERSION     = '1.0-SNAPSHOT'

        // ===== Docker =====
        IMAGE_NAME = 'hariveer/solar-system'
        IMAGE_TAG  = "${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout Source') {
            steps {
                checkout scm
            }
        }

        stage('Download JAR from Nexus') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: NEXUS_CREDS,
                    usernameVariable: 'NEXUS_USER',
                    passwordVariable: 'NEXUS_PASS'
                )]) {
                    sh '''
                    set -e
                    mkdir -p target

                    curl -sf -u $NEXUS_USER:$NEXUS_PASS \
                      -o target/app.jar \
                      $NEXUS_URL/repository/$NEXUS_REPO/$GROUP_ID/$ARTIFACT_ID/$VERSION/$ARTIFACT_ID-$VERSION.jar

                    ls -lh target/app.jar
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t $IMAGE_NAME:$IMAGE_TAG .
                '''
            }
        }

        stage('Run Container on 8080 (SAFE)') {
			steps {
				sh '''
				echo "üîç Checking if port 8080 already in use..."

				if docker ps --format '{{.Names}}' | grep -q solar-test; then
				echo "‚ö†Ô∏è solar-test container already running on 8080"
				echo "‚úÖ Reusing existing container"
				else
				echo "üöÄ Starting new container on 8080"
				docker run -d \
					-p 8080:8080 \
					--name solar-test \
					$IMAGE_NAME:$IMAGE_TAG
				fi

				docker ps | grep solar-test
				'''
			}
		}


        stage('Approval After App is Running') {
            steps {
                input message: "App is running on port 8080. Proceed to Phase-3 (Kubernetes)?",
                      ok: "APPROVE"
            }
        }

    }

    post {
        success {
            echo '‚úÖ Phase-2 success: App running on 8080 & approval granted'
        }
        aborted {
            echo '‚è∏Ô∏è Approval rejected ‚Äì Container still running on 8080'
        }
        failure {
            echo '‚ùå Phase-2 failed'
        }
    }
}