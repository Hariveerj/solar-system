pipeline {
    agent { label 'app-server-agent' }

    environment {
        // ===== Nexus =====
        NEXUS_URL   = 'http://13.234.202.23:8081'
        NEXUS_REPO  = 'maven-snapshots'
        NEXUS_CREDS = 'nexus-creds'

        GROUP_ID    = 'com/example'
        ARTIFACT_ID = 'solar-system'
        VERSION     = '1.0-SNAPSHOT'

        // ===== Docker =====
        IMAGE_NAME = 'hariveer/solar-system'
        IMAGE_TAG  = "${BUILD_NUMBER}"
        CONTAINER  = "solar-test-${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout Source') {
            steps {
                checkout scm
            }
        }

        stage('Download JAR from Nexus (SNAPSHOT SAFE)') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: NEXUS_CREDS,
                    usernameVariable: 'NEXUS_USER',
                    passwordVariable: 'NEXUS_PASS'
                )]) {
                    sh '''
                    set -e
                    mkdir -p target

                    echo "üîπ Fetching maven-metadata.xml"
                    curl -sf -u $NEXUS_USER:$NEXUS_PASS \
                      $NEXUS_URL/repository/$NEXUS_REPO/$GROUP_ID/$ARTIFACT_ID/$VERSION/maven-metadata.xml \
                      -o metadata.xml

                    SNAPSHOT_VERSION=$(grep '<value>' metadata.xml | head -1 | sed 's/.*<value>\\(.*\\)<\\/value>.*/\\1/')

                    if [ -z "$SNAPSHOT_VERSION" ]; then
                      echo "‚ùå SNAPSHOT version not found"
                      exit 1
                    fi

                    echo "‚úÖ Resolved SNAPSHOT version: $SNAPSHOT_VERSION"

                    curl -sf -u $NEXUS_USER:$NEXUS_PASS \
                      -o target/app.jar \
                      $NEXUS_URL/repository/$NEXUS_REPO/$GROUP_ID/$ARTIFACT_ID/$VERSION/$ARTIFACT_ID-$SNAPSHOT_VERSION.jar

                    ls -lh target/app.jar
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t $IMAGE_NAME:$IMAGE_TAG .
                docker images | grep $IMAGE_NAME
                '''
            }
        }

        stage('Run Container on 8080 (DO NOT REMOVE)') {
            steps {
                sh '''
                echo "üîπ Starting container on 8080"

                docker run -d \
                  -p 8080:8080 \
                  --name $CONTAINER \
                  $IMAGE_NAME:$IMAGE_TAG

                docker ps | grep $CONTAINER
                '''
            }
        }

        stage('Approval After App is Running') {
            steps {
                input message: """
‚úÖ App is running on port 8080

URL: http://<APP-SERVER-IP>:8080

Proceed to Phase-3 (Kubernetes)?
""",
                ok: 'APPROVE'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Phase-2 SUCCESS ‚Äì App running on 8080'
        }
        aborted {
            echo '‚è∏Ô∏è Approval rejected ‚Äì Container still running'
        }
        failure {
            echo '‚ùå Phase-2 FAILED'
        }
    }
}